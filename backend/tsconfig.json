{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "rootDir": "./",
    "outDir": "./dist",
    "module": "node16",
    "moduleResolution": "node16",
    // "types": ["node", "express"],
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "server.ts", "app.ts"],
  "exclude": ["node_modules"]
}
